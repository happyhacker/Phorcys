@using Microsoft.Web.Mvc
@using Phorcys.UI.Web.Controllers
@using Phorcys.UI.Web.Models
@using Phorcys.Core
@using SharpArch.Web.Areas
@model ContactModel
@{
    ViewBag.Title = "Add a Contact";
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}
<h2>
    Add a Contact</h2>
@if (ViewContext.TempData[ControllerEnums.GlobalViewDataProperty.PageMessage.ToString()] != null) {
    <p id="pageMessage">
        @ViewContext.TempData[ControllerEnums.GlobalViewDataProperty.PageMessage.ToString()]</p>
}
<!--@Html.ValidationSummary()-->
@using (Html.BeginForm("Create", "Contacts")) {
    @Html.AntiForgeryToken()

  <div class="errorOnPage">
    @Html.ValidationSummary(true, "Please correct the errors and try again.")
  </div>
    
    <label for="Company">
        Company:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Company)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.Company)
    </div>
    <br />
    
    <label for="FirstName">
        First Name:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.FirstName)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <br />
    
   <label for="LastName">
        First Name:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.LastName)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <br />
 
    <label for="Address 1">
        Address 1:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Address1)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.Address1)
    </div>
    <br />
 
     <label for="Address 2">
        Address 2:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Address2)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.Address2)
    </div>
    <br />
 
    <label for="City">
        City:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.City)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.City)
    </div>
    <br />
 
     <label for="Postal Code">
        Postal Code:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.PostalCode)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.PostalCode)
    </div>
    <br />
 
    <label for="Country">
        Country:</label>
    <div>
        <select id="DiveSite_DiveLocationId" name="DiveSite.DiveLocationId">
            @foreach (SelectListItem item in Model.DiveLocationsListItems) {
                <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text </option>
            }
        </select>
    </div>
    <br />

 
    <label for="email">
        Email:</label>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Email)
        @*<input id="DiveSite_Title" name="DiveSite.Title" type="text" value="@Model.Title" size="50" maxlength="40" />*@
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <br />
 
<label for="Notes">
        Notes:</label>
    <div>
        <br />
        <textarea id="Notes" name="Notes" rows="6" cols="70"> </textarea>
    </div>
    <br />
    @Html.ValidationMessageFor(m => m.Notes)
    <br />

    @Html.SubmitButton("btnSave", "Save Contact")
    @Html.Button("btnCancel", "Cancel", HtmlButtonType.Button, "window.location.href = '../'")
}
